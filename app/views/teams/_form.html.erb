<%= form_for(@team) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :first_user_id %><br />
    <%= f.number_field :first_user_id %>
  </div>
  <div class="field">
    <%= f.label :second_user_id %><br />
    <%= f.number_field :second_user_id %>
  </div>
  <div class="field">
    <%= f.label :kilometers %><br />
    <%= f.text_field :kilometers %>
  </div>
  <p>Retos:</p>
  <% Challenge.all.each do |challenge| %>
    <li> <%= challenge.name %> <input type="checkbox" name='challenge_<%= challenge.id %>' <%= @team.challenges.index(challenge) ? "checked" : "" %>/></li>
  <% end %> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
