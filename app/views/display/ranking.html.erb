<% content_for :head_script do %>
  <%= javascript_include_tag 'jquery.mCustomScrollbar.min', 'ranking' %>
<% end %>
<% content_for :head_style do %>
  <%= stylesheet_link_tag 'index', 'ranking', 'jquery.mCustomScrollbar.css' %>
<% end %>

<div class="container background_juntas">
  <div id="contenedor">
    <div id="ranking" class="ranking s2x3">
      <p class="rank_header">RANKING</p>
      <ul id="ranking_lista">
        <% @total_ranking.each_with_index do |team, i| %>
          <li>
            <p class='numero'><%= i+1+@total_ranking.offset %></p>
            <div class="team_pics" >
            <%= image_tag "http://graph.facebook.com/"+team.first_user.facebook_id+"/picture?redirect=1&type=square&width=30&height=30", :class=>'profile_pic_bg profile_pic_thumb'%><%= image_tag "http://graph.facebook.com/"+team.second_user.facebook_id+"/picture?redirect=1&type=square&width=30&height=30", :class=>'profile_pic_bg profile_pic_thumb' %>
            </div> 
            <div class='team_info'>
              <p class='team_name'><%= team.name.upcase %></p>
              <p class='team_kilometers'><%= team.kilometers.round(2).to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %> KM</p>
            </div>
          </li>
        <% end %>
      </ul>
      <%= will_paginate @total_ranking, :page_links => false, :next_label=>'<div class="pull_right"></div>', :previous_label=>'<div class="pull_left"></div>'%>
    </div
    ><div id="contenedor_derecha" class="ranking_der centra s2x3"
    ></div>
  </div>
</div>
